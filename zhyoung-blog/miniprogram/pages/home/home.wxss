/* miniprogram/pages/home/home.wxss */

.user-info-view {
  margin-top: 10rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 130rpx;
  position: fixed;
}

.top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.info-text-view {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 40rpx;
}

.time {
  font-size: 30rpx;
  color: #b8b2b2
}

.divLine {
  margin-top: 10rpx;
}

.scroll-view {
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 140rpx;
  width: 100%;
}

.intro-view {
  margin-top: 50rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  line-height: 50rpx;
}

.about-text{
  font-size: 45rpx;
}

.about-contact-view{
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: center;
}

.about-contact{
  margin-top: 5rpx;
  display: flex;
  flex-direction: row;
  align-items: stretch;
}

.fenge{
  margin-left: 25rpx;
}

.about-contact-img{
  margin-top: 10rpx;
  height: 20rpx;
  width: 20rpx;
  border-radius: 60rpx;
}

.about-contact-text{
  margin-top: 10rpx;
  margin-left: 10rpx;
  margin-right: 15rpx;
  font-size: 20rpx;
  line-height: 20rpx;
}

.finish-todo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
  font-size: 35rpx;
}

.QR-code-view {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 350rpx;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

.QR-code {
  width: 300rpx;
  height: 300rpx;
}

.search-view {
  height: 50rpx;
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 40rpx;
}

.search-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
}

.search-input {
  border: 3rpx solid;
  border-radius: 15rpx;
}

.search-icon {
  margin-left: 20rpx;
}

.write-btn-view {
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 150rpx;
  right: 80rpx;
}

.write-btn {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50rpx;
}