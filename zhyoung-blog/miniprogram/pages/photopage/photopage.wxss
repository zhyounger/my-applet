/* miniprogram/pages/photopage/photopage.wxss */

.photo-view {
  margin-top: 30rpx;
  /* background-color: lightblue; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 750rpx;
}

.photo {
  display: block;
  width: 750rpx;
  height: 100%;
  /* background-color: #eeeeee; */
}

.page-view {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  justify-content: center;
  align-items: center;
}

.picker {
  width: 100rpx;
  background-color: #eee;
  justify-content: center;
  align-items: center;
  text-align: center;
  border-style: solid;
  border-width: thin;
  border-color: #ddd;
  border-radius: 15rpx;
}

.index-btn {
  background: none;
  border: none;
}

.index-font {
  font-family: 'Times New Roman', Times, serif;
  font-size: 30rpx;
}

